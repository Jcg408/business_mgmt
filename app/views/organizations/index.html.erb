<div class="max-w-7xl mx-auto px-4 py-8">
  <div class="flex items-center justify-between mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Organizations</h1>
      <p class="mt-2 text-gray-600">Manage your business organizations</p>
    </div>
    <%= link_to "Create New Organization", new_organization_path, class: "px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 focus:ring-4 focus:ring-blue-300" %>
  </div>

  <% if @organizations.any? %>
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      <% @organizations.each do |organization| %>
        <div class="bg-white rounded-lg shadow-md border border-gray-200 hover:shadow-lg transition-shadow">
          <div class="p-6">
            <div class="flex items-start justify-between mb-4">
              <h2 class="text-xl font-semibold text-gray-900"><%= organization.name %></h2>
              <% if organization.active %>
                <span class="px-2 py-1 text-xs font-medium text-green-800 bg-green-100 rounded-full">Active</span>
              <% else %>
                <span class="px-2 py-1 text-xs font-medium text-gray-800 bg-gray-100 rounded-full">Inactive</span>
              <% end %>
            </div>

            <% if organization.description.present? %>
              <p class="text-sm text-gray-600 mb-4"><%= truncate(organization.description, length: 100) %></p>
            <% end %>

            <div class="space-y-2 text-sm text-gray-600 mb-4">
              <div class="flex items-start">
                <svg class="w-5 h-5 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                </svg>
                <div><%= pluralize(organization.businesses.count, 'business', 'businesses') %></div>
              </div>

              <div class="flex items-start">
                <svg class="w-5 h-5 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
                <div><%= pluralize(organization.employees.count, 'employee') %></div>
              </div>

              <% if organization.owner %>
                <div class="flex items-start">
                  <svg class="w-5 h-5 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                  <div>Owner: <%= organization.owner.name %></div>
                </div>
              <% end %>
            </div>

            <div class="flex gap-2 pt-4 border-t">
              <%= link_to "View", organization_path(organization), class: "flex-1 text-center px-4 py-2 text-blue-600 hover:bg-blue-50 rounded-lg transition-colors" %>
              <%= link_to "Edit", edit_organization_path(organization), class: "flex-1 text-center px-4 py-2 text-gray-700 hover:bg-gray-50 rounded-lg transition-colors" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow-md border border-gray-200 p-12 text-center">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
      </svg>
      <h3 class="mt-4 text-lg font-medium text-gray-900">No organizations yet</h3>
      <p class="mt-2 text-gray-500">Get started by creating your first organization.</p>
      <%= link_to "Create Organization", new_organization_path, class: "mt-6 inline-block px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700" %>
    </div>
  <% end %>
</div>
