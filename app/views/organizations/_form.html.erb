<% if @organization.errors.any? %>
  <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
        </svg>
      </div>
      <div class="ml-3">
        <h3 class="text-sm font-medium text-red-800">
          <%= pluralize(@organization.errors.count, "error") %> prohibited this organization from being saved:
        </h3>
        <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
          <% @organization.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>

<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
  <h2 class="text-lg font-semibold text-gray-900 mb-4">Basic Information</h2>
  
  <div class="space-y-4">
    <div>
      <%= f.label :name, "Organization Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.text_field :name, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "e.g., Glamour Beauty Group" %>
    </div>

    <div>
      <%= f.label :description, "Description", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.text_area :description, rows: 4, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "Describe your organization..." %>
    </div>

    <div class="flex items-center">
      <%= f.check_box :active, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
      <%= f.label :active, "Active (Organization is currently operating)", class: "ml-2 text-sm text-gray-700" %>
    </div>
  </div>
</div>

<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
  <h2 class="text-lg font-semibold text-gray-900 mb-4">Organization Owner</h2>
  
  <div>
    <%= f.label :owner_id, "Select Owner", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.collection_select :owner_id, @employees, :id, :name, 
          { include_blank: "Select an employee" }, 
          class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500" %>
    <p class="mt-2 text-sm text-gray-500">The owner has full access to all businesses in this organization.</p>
  </div>
</div>